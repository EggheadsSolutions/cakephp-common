{
  "name": "eggheads/cakephp-common",
  "type": "cakephp-plugin",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Eggheads\\CakephpCommon\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Eggheads\\CakephpCommon\\Test\\": "tests/",
      "TestApp\\": "test-app/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "git://github.com/EggheadsSolutions/eggheads-code-style"
    },
    {
      "type": "vcs",
      "url": "git://github.com/EggheadsSolutions/runkit-test-mocks"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-pcntl": "*",
    "ext-pdo": "*",
    "ext-simplexml": "*",
    "cakephp/cakephp": "^4.3",
    "cakephp/migrations": "3.6.1",
    "connehito/cake-sentry": "^4.0",
    "eggheads/mocks": "^1.0.0",
    "jan-swiecki/simple-annotations": "^0.3.1",
    "phpdocumentor/reflection-docblock": "^5.3",
    "symfony/http-client": "^6.0",
    "symfony/property-access": "^6.0",
    "symfony/property-info": "^6.0",
    "symfony/serializer": "^6.0"
  },
  "require-dev": {
    "cakephp/bake": "^2.6",
    "cakephp/cakephp-codesniffer": "^4.5",
    "cakephp/debug_kit": "^4.7",
    "cakephp/repl": "^0.1",
    "eggheads/eggheads-code-style": "^2.1",
    "mheap/phpunit-github-actions-printer": "^1.5",
    "phpunit/phpunit": "^9.5",
    "vierge-noire/cakephp-fixture-factories": "^2.5"
  },
  "scripts": {
    "check": [
      "@cs-check",
      "@phpmd-check",
      "@phpstan-check",
      "@test"
    ],
    "cs-check": "phpcs --colors -p src/ tests/",
    "cs-fix": "phpcbf --colors -p src/ tests/",
    "phpmd-check": "vendor/bin/phpmd src/,tests/ text phpmd-ruleset.xml",
    "phpstan-check": "vendor/bin/phpstan --configuration=phpstan.neon",
    "test": "phpunit --colors=always"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
